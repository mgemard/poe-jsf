<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="dialect">org.hibernate.dialect.HSQLDialect</property>
		<property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
		<property name="connection.url">jdbc:h2:tcp://localhost:9001/basejpa</property>
		<property name="hibernate.connection.username">sa</property>
		<property name="hibernate.connection.password"></property>
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
        <mapping class="jpa.Etudiant" />
        <mapping class="jpa.Professeur" />
        <mapping class="jpa.Salle" />
        <mapping class="jpa.Creneau" />
        <mapping class="jpa.Cours" />
        <mapping class="jpa.Matiere" />
        <mapping class="jpa.Cursus" />
        <mapping class="jpa.Horaire" />
	</session-factory>
</hibernate-configuration>
